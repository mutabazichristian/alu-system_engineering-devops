#!/usr/bin/env bash
# bash script to install nginx web server & make the following configurations:

service nginx stop

apt-get update
apt-get install -y nginx

mkdir /etc/nginx/mutabazi

touch /etc/nginx/mutabazi/index.html

echo "Mutabazi & Holberton School" > sudo tee /var/www/html/mutabazi/index.html

# Create custom 404 error page
echo "<!DOCTYPE html>
<html>
<head>
  <title>Mutabazi</title>
</head>
<body>
  <h1>404 Not Found</h1>
  <p>Ceci n'est pas une page</p>
</body>
</html>" | sudo tee /var/www/mutabazi/404.html >/dev/null

printf %s "http{
    include mime.types;

    server {
        listen  80;
        root /var/www/mutabazi;
        location /redirect_me {
          return 301 https://www.google.com;
        
        error_page 404 /404.html;
        location = /404.html {
          internal;
        }
        }
    }
}

events {

}
" > /etc/nginx/nginx.conf

service nginx restart
